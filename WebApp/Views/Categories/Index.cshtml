@model List<CoreBusiness.Category>

@section title {
    <h3>Categorias</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td><a class="btn btn-primary" asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId">Editar</a></td>
                    <td><a class="btn btn-danger" asp-controller="categories" asp-action="delete" asp-route-categoryid="@category.CategoryId" onclick="return confirmDelete()">Apagar</a></td>
                </tr>
            }
        </tbody>
    </table>
    
}

<br />
<a class="btn btn-success" asp-controller="categories" asp-action="add">Adicionar</a>

@section Scripts{
    <script>
        function confirmDelete(){
            return confirm("Tem mesmo a Certeza?");
        }
    </script>
}
