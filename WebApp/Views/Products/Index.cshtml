@model List<Product>

@section title {
    <h3>Products</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>      
                <th>Categoria Nome</th>
                <th>Producto Nome</th>
                <th>Preço</th>
                <th>Quantidade</th>      
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>    
                    <td>@product.Category?.Name</td>
                    <td>@product.Name</td>
                    <td>@product.Price?.ToString("c")</td>
                    <td>@product.Quantity</td>
                    <td><a class="btn btn-primary" asp-controller="products" asp-action="edit" asp-route-id="@product.ProductId">Editar</a></td>
                    <td><a class="btn btn-danger" asp-controller="products" asp-action="delete" asp-route-id="@product.ProductId" onclick="return confirmDelete()">Apagar</a></td>
                </tr>
            }
        </tbody>
    </table>    
}

<br />
<a class="btn btn-success" asp-controller="products" asp-action="add">Adicionar</a>

@section Scripts{
    <script>
        function confirmDelete() {
            return confirm("Tem mesmo a certeza?");
        }
    </script>
}